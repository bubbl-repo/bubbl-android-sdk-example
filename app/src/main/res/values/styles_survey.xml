<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Survey Text Styles -->
    <style name="SurveyQuestionText">
        <item name="android:textSize">@dimen/survey_question_text_size</item>
        <item name="android:textColor">@color/survey_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="SurveyQuestionNumber">
        <item name="android:textSize">@dimen/survey_question_number_size</item>
        <item name="android:textColor">@color/survey_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SurveyChoiceText">
        <item name="android:textSize">@dimen/survey_choice_text_size</item>
        <item name="android:textColor">@color/survey_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SurveyHintText">
        <item name="android:textSize">@dimen/survey_hint_text_size</item>
        <item name="android:textColor">@color/survey_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Survey Card Style -->
    <style name="SurveyQuestionCard">
        <item name="android:background">@drawable/survey_card_background</item>
        <item name="android:padding">@dimen/survey_card_padding</item>
        <item name="android:layout_marginStart">@dimen/survey_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/survey_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/survey_question_spacing</item>
        <item name="android:elevation">@dimen/survey_card_elevation</item>
    </style>

    <!-- Survey Text Input Style -->
    <style name="SurveyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/survey_primary</item>
        <item name="hintTextColor">@color/survey_primary</item>
        <item name="android:textColorHint">@color/survey_text_hint</item>
        <item name="boxBackgroundColor">@color/survey_card_background</item>
    </style>

    <style name="SurveyTextInputEditText">
        <item name="android:textColor">@color/survey_text_primary</item>
        <item name="android:textColorHint">@color/survey_text_hint</item>
    </style>

    <!-- Survey Submit Button -->
    <style name="SurveySubmitButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/survey_submit_button_height</item>
        <item name="android:textSize">@dimen/survey_submit_button_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/survey_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Choice Button (used for RadioButton/CheckBox alternatives) -->
    <style name="SurveyChoiceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/survey_choice_padding</item>
        <item name="android:layout_marginBottom">@dimen/survey_choice_margin</item>
        <item name="android:background">@drawable/survey_choice_background</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/survey_choice_text_size</item>
        <item name="android:textColor">@color/survey_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
