<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/survey_choice_selected" />
            <corners android:radius="@dimen/survey_choice_radius" />
            <stroke
                android:width="2dp"
                android:color="@color/survey_choice_selected_border" />
        </shape>
    </item>

    <!-- Checked state (for checkboxes) -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/survey_choice_selected" />
            <corners android:radius="@dimen/survey_choice_radius" />
            <stroke
                android:width="2dp"
                android:color="@color/survey_choice_selected_border" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/survey_choice_hover" />
            <corners android:radius="@dimen/survey_choice_radius" />
            <stroke
                android:width="2dp"
                android:color="@color/survey_choice_selected_border" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/survey_choice_unselected" />
            <corners android:radius="@dimen/survey_choice_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/survey_choice_unselected_border" />
        </shape>
    </item>
</selector>
