<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="1dp">
        <shape>
            <solid android:color="@color/survey_divider" />
            <corners android:radius="@dimen/survey_card_radius" />
        </shape>
    </item>

    <!-- Card -->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="@color/survey_card_background" />
            <corners android:radius="@dimen/survey_card_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/survey_divider" />
        </shape>
    </item>
</layer-list>
