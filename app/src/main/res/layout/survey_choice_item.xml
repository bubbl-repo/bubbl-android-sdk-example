<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/survey_choice_padding"
    android:layout_marginBottom="@dimen/survey_choice_margin"
    android:background="@drawable/survey_choice_background"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Choice Text -->
    <TextView
        android:id="@+id/tv_choice_text"
        style="@style/SurveyChoiceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Choice text" />

    <!-- Selection Indicator (will be replaced with RadioButton or CheckBox icon) -->
    <ImageView
        android:id="@+id/iv_selection_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:contentDescription="Selection indicator" />
</LinearLayout>
