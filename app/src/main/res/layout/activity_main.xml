<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bubbl_version"
                    android:textSize="30sp" />

                <ImageButton
                    android:id="@+id/btn_config"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Change Bubbl config"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- PERMISSIONS & STATUS (SCROLLABLE) -->
            <!--    <ScrollView-->
            <!--        android:id="@+id/top_scroll"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginBottom="16dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location_permission_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Location Permission: Unknown" />

                <TextView
                    android:id="@+id/notification_permission_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Notification Permission: Unknown" />

                <Button
                    android:id="@+id/request_notification_permission_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Refresh and Request Permissions" />

                <TextView
                    android:id="@+id/api_key_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Key: Not Set" />

            </LinearLayout>
            <!--    </ScrollView>-->

            <!-- MAP VIEW (NOT SCROLLABLE - ALLOWS PANNING) -->
            <com.example.mybubblhost.MapTouchFrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" />
            </com.example.mybubblhost.MapTouchFrameLayout>

            <Button
                android:id="@+id/btn_reset_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Reset MAP" />

            <!-- SEGMENT TESTING & OTHER BUTTONS (SCROLLABLE) -->

            <!--    <ScrollView-->
            <!--        android:id="@+id/bottom_scroll"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="0dp"-->
            <!--        android:layout_weight="1"-->
            <!--        android:fillViewport="true"-->
            <!--        android:clipToPadding="false">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/custom_segment_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:hint="e.g. beta, tester, vip"
                        android:inputType="text"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/btn_send_custom_segments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update" />
                </LinearLayout>
                <!-- ========== SEGMENT TESTING SECTION ========== -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Test Segments"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Segment Feedback -->
                <TextView
                    android:id="@+id/segment_feedback_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="#F0F0F0"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- Preset Segment Buttons -->
                <GridLayout
                    android:id="@+id/segment_buttons_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:columnCount="2"
                    android:rowCount="4">

                    <Button
                        android:id="@+id/btn_segment_premium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Premium" />

                    <Button
                        android:id="@+id/btn_segment_free"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Free User" />

                    <Button
                        android:id="@+id/btn_segment_vip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="VIP" />

                    <Button
                        android:id="@+id/btn_segment_trial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Trial" />

                    <Button
                        android:id="@+id/btn_segment_inactive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Inactive" />

                    <Button
                        android:id="@+id/btn_segment_power_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Power User" />

                    <Button
                        android:id="@+id/btn_segment_clear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Clear All" />
                </GridLayout>

                <!-- Custom Segment Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Custom Segments"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Enter segments separated by commas (e.g. beta, tester, vip)"
                    android:textColor="#666666"
                    android:textSize="11sp" />


                <!-- ========== OTHER BUTTONS SECTION ========== -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:onClick="tokenButton"
                    android:text="Copy token" />

                <Button
                    android:id="@+id/download_logs_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:onClick="downloadLogs"
                    android:text="Download logs" />

                <Button
                    android:id="@+id/clear_logs_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:onClick="clearLogs"
                    android:text="Clear logs file" />

            </LinearLayout>
            <!--    </ScrollView>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout><!--<?xml version="1.0" encoding="utf-8"?>-->
